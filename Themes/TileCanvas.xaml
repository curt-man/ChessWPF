<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="clr-namespace:ChessWPF.MVVM.Model">
    <custom:ColorToBrushConverter x:Key="myColorConverter"/>
    <Style TargetType="ListBoxItem"
           x:Key="TileCanvas">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{Binding TileColor, Converter={StaticResource myColorConverter}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Height="60"
                            Width="60"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            >
                        <Path Data="{Binding ChessPiece.PieceIcon}"
                              Fill="{Binding ChessPiece.PieceColor}"
                              Height="36"
                              Stretch="Uniform"
                              Margin="10"
                              />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>